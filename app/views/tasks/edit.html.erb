<%= form_for @task, url: url_for(controller: 'tasks', action: 'update'), html: {class: "ui form"} do |f| %>
  <div class="field">
    <label for="tname">Title</label>
    <%= f.text_field :name, :value => @task.name %>
  </div>
  <div class="field">
    <label for="Detail">Detail</label>
    <div class="field">
      <%= f.text_area :detail, :value => @task.detail %>
    </div>
  </div>
  <div class="field">
    <label for="state">State</label>
    <%= f.collection_select :state_id, State.all, :id, :name%>
  </div>
  <div class="field">
    <label for="assigned">Assigned to</label>
    <%= f.collection_select :assigned_id, @list_of_user, :id, :first_name %>
  </div>
  <div class="field">
    <%= f.submit :class => 'ui primary submit button'%>
  </div>
  <%= f.hidden_field :group_id, :value => @group.id %>
  <%= f.hidden_field :creator_id, :value => @task.creator_id %>
<% end %>
