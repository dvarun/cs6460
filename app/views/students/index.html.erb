<div class="ui one column grid">
  <div class="column">
    Student List
    <hr/>
  </div>
  <div class="column">
    <table class="ui celled table">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>View</th>
        </tr>
      </thead>
      <tbody>
        <% for user in @users%>
          <tr>
            <td data-label="fname"><%= user.first_name %></td>
            <td data-label="lname"><%= user.last_name %></td>
            <td data-label="view"><%= link_to "View", student_path(user), :class => "item"%></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  <div class="column">
    Sign Up Dates
    <hr/>
  </div>
  <div class="column">
    <%= line_chart User.group_by_day(:created_at).count %>
  </div>
</div>
