<!DOCTYPE html>
<html>
  <head>
    <title>Sict</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="ui container">
      <div class="ui two column grid">
        <div class="column">
          <h1>SICT</h1>
        </div>
        <div class="right aligned column">
          Bread crumbs goes here
        </div>
      </div>
      <p></p>
      <div class="ui attached stackable menu">
        <div class="ui container">
          <a class="item"> <i class="home icon"></i> Home </a>
          <a class="item"> <i class="mail icon"></i> Messages </a>
          <%= link_to('<i class="book icon"></i>Course'.html_safe, courses_path, :class => "item") %>
          <% if user_signed_in? %>
            <div class="right item">
              <div class="ui">
                <div class="ui simple dropdown">
                  <%= current_user.first_name %> <%= current_user.last_name %>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                    <%= link_to('<i class="edit icon"></i>Edit'.html_safe, edit_user_registration_path, :class => "item") %>
                    <%= link_to('<i class="power off icon"></i>Logout'.html_safe, destroy_user_session_path, method: :delete, :class => "item") %>
                  </div>
                </div>
              </div>
            </div>
          <%end%>
        </div>
      </div>
      <br />
      <div class="ui grid">
        <div class="four wide column">
          <div class="ui small vertical menu">
            <a class="item">
              Dashboard
            </a>
            <a class="item">
              Tasks
            </a>
            <a class="item">
              Submission
            </a>
          </div>
        </div>
        <!-- sidebar-->
        <div class="twelve wide column">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <%= yield %>
        </div>
      </div>
      <!--main-->
    </div>
    <!-- container div-->
  </body>
</html>
